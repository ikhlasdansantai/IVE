datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

model Comment {
  id     String     @id @default(auto()) @map("_id") @db.ObjectId
//   title  String? // (?) adalah  optional
  title  String
  author String
  tags   String?
  createdAt DateTime @default(now())     
}